<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.recreu.recreu.views.PorFecha">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="635dp"
        android:layout_gravity="center_horizontal|top"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Buscar por fecha"
            android:id="@+id/textView21"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.10"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@color/RECREU" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Desde:"
            android:id="@+id/textView18"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@color/RECREU"
            android:paddingTop="5dp"
            android:layout_marginTop="30dp"
            android:translationZ="20dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="37dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fecha:           "
                android:id="@+id/textView19"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2015-02-04 "
                android:id="@+id/fechaInicio"
                android:layout_row="0"
                android:layout_column="1" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/modificarFechaInicio"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@android:drawable/ic_menu_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hora: "
                android:id="@+id/textView20"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00:00:00 "
                android:id="@+id/horaInicio"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/ic_menu_edit"
                android:id="@+id/modificarHoraInicio"
                android:layout_row="1"
                android:layout_column="2" />
        </GridLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hasta:"
            android:id="@+id/textView22"
            android:paddingLeft="25dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@color/RECREU"
            android:textColor="#ffffff"
            android:paddingTop="5dp"
            android:translationZ="20dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="37dp"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fecha:           "
                android:id="@+id/textView23"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2015-02-04 "
                android:id="@+id/fechaFin"
                android:layout_row="0"
                android:layout_column="1" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/ic_menu_edit"
                android:id="@+id/modificarFechaFin"
                android:layout_row="0"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hora: "
                android:id="@+id/textView24"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00:00:00 "
                android:id="@+id/horaFin"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/ic_menu_edit"
                android:id="@+id/modificarHoraFin"
                android:layout_row="1"
                android:layout_column="2" />
        </GridLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:text="Buscar"
            android:id="@+id/buscarPorFecha"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.57"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="50dp"
            android:background="@color/RECREU"
            android:textSize="40dp"
            android:translationZ="30dp"
            android:typeface="normal" />


    </LinearLayout>
</FrameLayout>
